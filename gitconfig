[user]
  name = Tobias Frilling
  email = tobias@frilling-online.de

[color]
  status = auto
  branch = auto
  interactive = auto
  diff = auto
  log = auto
  pager = true
[core]
  pager = less -R
  excludesfile = /home/tobias/.gitignore_global
[alias]
  lg = log --pretty=format:'%C(yellow)%h%Cred%d %Creset%s %Cred|%Cblue%ad,%Cgreen%aN%Creset' --date=short --graph --abbrev-commit
  s = status -sb
  branches = branch -a
  tags = tag
  stashes = stash list
  unstage = reset -q HEAD --
  discard = checkout --
  uncommit = reset --mixed HEAD~
  amend = commit --amend
  nevermind = !git reset --hard HEAD && git clean -d -f
  wdiff = diff --word-diff=color
[push]
  default = simple
[diff]
  algorithm = patience
[url "https://aur.archlinux.org/"]
  insteadOf = aur://
[pull]
  rebase = true
